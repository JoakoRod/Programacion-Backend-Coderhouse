<div class="container align-center mt-4 mb-3">
    <div class="chat-container">
        <header class="chat-header">
            <h4><i class="fas fa-smile"></i> Chat</h4>
            <form class="row row-cols-lg-auto g-3 align-items-center" id="chat-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="nombre">nombre</label>
                        <input type="text" class="form-control form-chat" id="nombre" placeholder="nombre" required>
                    </div>
                    <div class="form-group">
                        <label for="apellido">apellido</label>
                        <input type="text" class="form-control form-chat" id="apellido" placeholder="apellido" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="email">email</label>
                        <input type="email" class="form-control form-chat" id="email" placeholder="email" required>
                    </div>
                    <div class="form-group">
                        <label for="edad">edad</label>
                        <input type="text" class="form-control form-chat" id="edad" placeholder="edad" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="alias">alias</label>
                        <input type="text" class="form-control form-chat" id="alias" placeholder="alias" required>
                    </div>
                    <div class="form-group">
                        <label for="avatar">avatar</label>
                        <input type="text" class="form-control form-chat" id="avatar" placeholder="avatar" required>
                    </div>
                </div>

        </header>
        <main class="chat-main">
            <div class="chat-messages" id="tabla-chat">
                {{#each mensajes}}

                <div class="message">
                    <p class="meta">{{this.author.id}}<span> {{this.fecha}}</span></p>
                    <p class="text">
                        {{this.text}}
                    </p>
                </div>

                {{/each}}

            </div>
        </main>
        <div class="chat-form-container col-sm-12">
            <input id="msg" type="text" placeholder="Enter Message" class="col-sm-11 form-chat" required
                autocomplete="off" />
            <button class="btn"><i class="fas fa-paper-plane"></i>Send</button>
            </form>
        </div>
    </div>
</div>