{{#if mostrar}}
<div class="container align-center mt-4" id="divTabla">
    <header class="chat-header">
        <h4><i class="fas fa-smile"></i>Lista de Productos:</h4>
    </header>
    <div class="table-responsive">
        <table class="table table-hover align-middle cont" id="tabla">
            <thead>
                <tr>
                    <th scope="col">title</th>
                    <th scope="col">price</th>
                    <th scope="col">descripcion</th>
                    <th scope="col">image</th>
                    <th scope="col">stock</th>
                    <th scope="col">agregar</th>
                </tr>
            </thead>
            <tbody id="tablaBody">
                {{#each productos}}

                <tr>
                    <td>{{this.nombre}}</td>
                    <td>{{this.precio}}</td>
                    <td>{{this.descripcion}}</td>
                    <td><img src="{{this.foto}}" class="img-fluid" width="40" height="40"></td>
                    <td>{{this.stock}}</td>
                    <td><button type="button" onclick="agregarProductoAlCarrito('{{this.nombre}}')" class="btn btn-outline-secondary botonAgregarAlCarrito">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-bag" viewBox="0 0 16 16">
                                <path
                                    d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z" />
                            </svg>
                        </button>
                    </td>
                </tr>

                {{/each}}
            </tbody>
        </table>
    </div>
</div>
{{else}}
<div class="container align-center mt-4" id="divTabla">No se encontraron productos</div>
{{/if}}