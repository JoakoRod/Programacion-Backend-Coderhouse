<div class="container align-center mt-3">
    <div class="row">
        <div>
            <header class="chat-header">
                <h4><i class="fas fa-smile"></i>Form de Productos:</h4>
            </header>
            <form class="formProducto cont pb-1" id="formProductos" action="{{ruta}}" method="post">
                <ul>
                    <div class="mb-3 pt-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control form-producto" id="title" name="title" required>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" step="any" class="form-control form-producto" id="price" name="price" required>
                    </div>
                    <div class="mb-3">
                        <label for="thumbnail" class="form-label">Thumbnail</label>
                        <input type="text" class="form-control form-producto" id="thumbnail" name="thumbnail" required>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn">Agregar</button>
                    </div>

                </ul>

            </form>
        </div>
    </div>
</div>