<div class="container align-center mt-4 mb-3">
    <div class="chat-container">
        <header class="chat-header">
            <h4><i class="fas fa-smile"></i> Chat</h4>
        </header>
        <main class="chat-main">
            <div class="chat-messages" id="tabla-chat">
                {{#each mensajes}}

                <div class="message">
                    <p class="meta"><img class="img" src="./avatars/{{this.user.email}}"
                            alt="{{this.user.firstName}} {{this.user.lastName}}"> {{this.user.firstName}} {{this.user.lastName}}<span>
                            {{this.updatedAt}}</span></p>
                    <p class="text">
                        {{this.text}}
                    </p>
                </div>

                {{/each}}

            </div>
        </main>
        <div class="chat-form-container col-sm-12">
            <input id="msg" type="text" placeholder="Enter Message" class="col-sm-11 form-chat" required
                autocomplete="off" />
            <button class="btn btns" onclick="mandarMsg()"><i class="fas fa-paper-plane"></i>Send</button>
        </div>
    </div>
</div>